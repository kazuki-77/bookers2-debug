  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %>
  <table class='table'>
    <tbody>
      <tr>
    	  <th>name</th>
    	  <th><%= user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= user.introduction %></th>
      </tr>
      <!-- マイページ以外にフォロー数・フォロワー数を表示 -->
      <tr>
        <th>follows</th>
        <th><%= link_to user.followers.count, followers_user_path(user)%></th>
      </tr>
      <tr>
        <th>followers</th>
        <th><%= link_to user.followeds.count, followeds_user_path(user) %></th>
      </tr>
    </tbody>
  </table>

<div class='row'>
  <tbody>
      <% if user != current_user %>
        <% if user.is_followed_by?(current_user) %>
        <tr>
          <th><%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-sm btn-info" %></th>
          <th></th>
          <th><%= link_to "chatを始める", chat_path(user.id) %></th>
        </tr>
        <% else %>
        <tr>
          <th><%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-sm btn-success" %></th>
        </tr>
        <% end %>
      <% else %>
        <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
      <% end %>
  </tbody>
</div>